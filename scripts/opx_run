docker run --privileged -i -t -v ${PWD}:/mnt docker-opx:latest bash -c "echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers; adduser --disabled-password --gecos '' opx-dev; adduser opx-dev sudo; groupmod -g $(id -g ${USER}) opx-dev; usermod -u ${UID} -g $(id -g ${USER}) opx-dev; su opx-dev"
